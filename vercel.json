{
  "version": 2,
  "builds": [
    {
      "src": "your_app_directory",
      "use": "@now/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "your_app_directory/your_app_filename.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "FLASK_APP": "your_app_directory/your_app_filename.py"
  }
}
